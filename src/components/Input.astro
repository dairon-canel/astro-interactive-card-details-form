---
export interface Props {
  id: string;
  label: string;
  value?: string;
  errors?: string;
  placeholder?: string;
  minLength?: number;
  maxLength?: number;
  required?: boolean;
  type?: 'text' | 'number';
  inputStyle?: string;
  inputClass?: string;
  error?: string;
}

const {
  value,
  error,
  id,
  placeholder,
  label,
  minLength,
  maxLength,
  required,
  type,
  inputStyle,
  inputClass,
} = Astro.props;
---

<div class="form_section__input_container" style={inputStyle}>
  <label class="input_label">
    {label}
    <input
      class:list={['form_section_input', inputClass]}
      type={type}
      name={id}
      id={id}
      placeholder={placeholder}
      minlength={`${minLength}`}
      maxlength={`${maxLength}`}
      required={required ?? false}
      autocomplete="off"
      value={value ?? ''}
    />
  </label>
  {error && <p class="error_container">{error}</p>}
</div>

<style>
  .form_section__input_container {
    display: grid;
  }

  .input_label {
    display: flex;
    flex-direction: column;
    min-width: 100px;
    text-transform: uppercase;
    font-size: small;
    letter-spacing: 1.3px;
    font-weight: bolder;
    color: var(--very-dark-violet);
    margin-bottom: 20px;
  }
  .form_section_input {
    margin-top: 6px;
    padding-top: 3px;
    padding-left: 15px;
    letter-spacing: 1.1px;
    height: 44px;
    border-radius: 7px;
    border: 1px solid var(--dark-grayish-violet);
    opacity: 70%;
    font-size: medium;
    font-weight: normal;
  }
  .form_section_input::placeholder {
    color: var(--dark-grayish-violet);
  }
</style>
